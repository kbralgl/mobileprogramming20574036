<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainback"
    tools:context=".MenuActivity">


    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/frame2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/soruEkle"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:text="Soru Ekle"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/questionListButton"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_baseline_mail_outline_24" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:text="Soru Listele"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@+id/frame4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame1">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_baseline_note_add_24"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:text="Sınav Oluştur"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="DuplicateIds" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame4"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame2">

        <ImageButton
            android:id="@+id/sinavAyarlari"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_baseline_leak_add_24"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/sinavAyarlari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:text="Sınav Ayarları"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="DuplicateIds" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>